@model WasteAway.ViewModels.ChangePickupWeekdayViewModel

@{
    ViewBag.Title = "Change Pickup Weekday";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Change Weekly Pickup Day</h2>

@using (Html.BeginForm("ChangePickupWeekday", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Pickup Day Form</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.WeekdayId, new { @class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.WeekdayId, new SelectList(Model.Weekdays, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.WeekdayId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Pickup Day" class="btn btn-default" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to my account.", "Index")
    </p>
}