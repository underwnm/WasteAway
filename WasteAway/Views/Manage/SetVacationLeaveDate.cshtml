@model WasteAway.ViewModels.VacationViewModel
@{
    ViewBag.Title = "SetVacationLeaveDate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Set Time Away</h2>

@using (Html.BeginForm("SetVacationLeaveDate", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Set Leave Date</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.DayId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.DayId, new SelectList(Model.Days, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DayId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MonthId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.MonthId, new SelectList(Model.Months, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MonthId)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.YearId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.YearId, new SelectList(Model.Years, "Id", "Name"), "", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.YearId)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Continue" class="btn btn-default" />
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to my account.", "Index")
    </p>
}